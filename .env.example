# DeepResearchTool Environment Variables
# Zkopírujte tento soubor jako .env a vyplňte své hodnoty

# ========================================
# ZÁKLADNÍ NASTAVENÍ
# ========================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
WORKERS=1

# ========================================
# LLM KONFIGURACE
# ========================================
# Ollama (lokální LLM)
OLLAMA_HOST=http://localhost:11434

# OpenAI (volitelné)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic (volitelné)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ========================================
# DATABÁZE
# ========================================
# Redis
REDIS_URL=redis://localhost:6379/0

# PostgreSQL/Vector DB
DATABASE_URL=postgresql://user:password@localhost:5432/deepresearch
PGVECTOR_HOST=localhost
PGVECTOR_PORT=5432
PGVECTOR_DATABASE=vectors
PGVECTOR_USER=your_db_user
PGVECTOR_PASSWORD=your_db_password

# Vector stores
CHROMA_HOST=http://localhost:8001
QDRANT_HOST=http://localhost:6333

# Neo4j
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password

# ========================================
# SCRAPING & EXTERNAL SERVICES
# ========================================
# Tor configuration
TOR_SOCKS_PORT=9050
TOR_CONTROL_PORT=9051
TOR_CONTROL_PASSWORD=your_tor_password

# Enterprise scraping (volitelné)
BRIGHT_DATA_USERNAME=your_brightdata_username
BRIGHT_DATA_PASSWORD=your_brightdata_password
APIFY_API_TOKEN=your_apify_token
SCRAPERAPI_KEY=your_scraperapi_key

# ========================================
# BEZPEČNOST
# ========================================
JWT_SECRET_KEY=your_jwt_secret_key_here
API_RATE_LIMIT=100
API_RATE_WINDOW=60

# Security flags
PII_REDACTION_ENABLED=true
SECRET_SCANNING_ENABLED=true
ROBOTS_TXT_RESPECT=true
RATE_LIMIT_RESPECT=true

# ========================================
# MONITORING & OBSERVABILITY
# ========================================
# Langfuse
LANGFUSE_SECRET_KEY=your_langfuse_secret
LANGFUSE_PUBLIC_KEY=your_langfuse_public
LANGFUSE_HOST=http://localhost:3000
LANGFUSE_ENABLED=false

# Prometheus & Grafana
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3001

# Sentry (error tracking)
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development

# Alerts
ALERT_WEBHOOK_URL=your_alert_webhook_url

# ========================================
# M1 OPTIMALIZACE
# ========================================
M1_OPTIMIZATION_ENABLED=true
