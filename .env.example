# Environment variables pro produkční nasazení
# Zkopírujte do .env a vyplňte skutečné hodnoty

# LLM API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Langfuse Observability
LANGFUSE_SECRET_KEY=your_langfuse_secret_key
LANGFUSE_PUBLIC_KEY=your_langfuse_public_key
LANGFUSE_HOST=http://localhost:3000
LANGFUSE_ENABLED=true

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/research_agent
CHROMA_HOST=http://localhost:8001

# Vector Database (pro produkci)
PGVECTOR_HOST=localhost
PGVECTOR_PORT=5432
PGVECTOR_DATABASE=vectors
PGVECTOR_USER=vector_user
PGVECTOR_PASSWORD=vector_password

# Enterprise Scraping
BRIGHT_DATA_USERNAME=your_bright_data_username
BRIGHT_DATA_PASSWORD=your_bright_data_password
APIFY_API_TOKEN=your_apify_token
SCRAPERAPI_KEY=your_scraperapi_key

# Redis Cache
REDIS_URL=redis://localhost:6379/0
REDIS_CLUSTER_NODES=redis-1:7000,redis-2:7000,redis-3:7000

# Monitoring & Metrics
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3001
ALERT_WEBHOOK_URL=your_slack_webhook_url

# Security
JWT_SECRET_KEY=your_jwt_secret_key
API_RATE_LIMIT=100
API_RATE_WINDOW=60

# Deployment
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
WORKERS=4

# CI/CD
DOCKER_REGISTRY=your_registry_url
KUBERNETES_NAMESPACE=research-agent
HELM_RELEASE_NAME=research-agent
