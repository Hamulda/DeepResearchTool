# DeepResearchTool Environment Variables Template
# Copy this file to .env and fill in your actual API keys

# OpenAI API (for LLM operations)
OPENAI_API_KEY=your_openai_api_key_here

# CourtListener API (optional but recommended for legal research)
COURTLISTENER_API_KEY=your_courtlistener_api_key_here

# CIA CREST API (for declassified documents)
CIA_API_KEY=your_cia_api_key_here

# Maltego API (requires license)
MALTEGO_API_KEY=your_maltego_api_key_here

# MISP Threat Intelligence (requires MISP instance)
MISP_SERVER_URL=your_misp_server_url_here
MISP_API_KEY=your_misp_api_key_here

# Firecrawl API (for web scraping)
FIRECRAWL_API_KEY=your_firecrawl_api_key_here

# Database paths
CHROMA_DB_PATH=./chroma_db

# Logging level
LOG_LEVEL=INFO

# Memory limits for M1 optimization
MAX_MEMORY_MB=1024
