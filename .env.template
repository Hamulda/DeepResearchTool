# API klíče (nahraďte vlastními hodnotami)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
LANGFUSE_SECRET_KEY=your_langfuse_secret_key_here
LANGFUSE_PUBLIC_KEY=your_langfuse_public_key_here
LANGFUSE_HOST=http://localhost:3000

# Database konfigurace
POSTGRES_USER=autonomous_user
POSTGRES_PASSWORD=secure_password_change_me
POSTGRES_DB=autonomous_research
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Milvus konfigurace
MILVUS_HOST=localhost
MILVUS_PORT=19530
MILVUS_USER=root
MILVUS_PASSWORD=milvus_password_change_me

# Tor proxy konfigurace
TOR_PROXY_HOST=localhost
TOR_PROXY_PORT=8118
TOR_SOCKS_PORT=9050

# FlareSolverr konfigurace
FLARESOLVERR_HOST=localhost
FLARESOLVERR_PORT=8191

# Bezpečnostní nastavení
SECRET_KEY=your_secret_key_32_chars_minimum_here
ENCRYPTION_KEY=your_encryption_key_32_chars_here

# Monitoring a logování
PROMETHEUS_HOST=localhost
PROMETHEUS_PORT=9090
LOG_LEVEL=INFO
STRUCTLOG_ENABLE=true

# Výkonnostní optimalizace
MAX_WORKERS=4
CHUNK_SIZE=1000
EMBEDDING_BATCH_SIZE=32
PARQUET_COMPRESSION=snappy

# Apple Metal optimalizace (pro M1/M2/M3)
CMAKE_ARGS="-DLLAMA_METAL=on"
FORCE_CMAKE=1
LLAMA_CPP_THREADS=8
